    <div id="container" class="container">
      <div id="gdcontent" class="section content" role="main">

          <div class="row row1">
            <div class="inner">


              <div class="col coll colpos20">
                <div class="inner">
                  <div class="header">
                    <h2>Sign In</h2>
                    <p><%= @hint %></p>
                  </div>
                  <div class="resourcebox">
                    <%= form_for :user, :url => {:controller => 'users', :action => 'login'} do |f| %>
                    <div class="textbox element required">
                      <label for="UserName">Username</label>
                      <%= f.text_field :name %>
                    </div>
                    <div class="textbox element required">
                      <%= f.label :passwaord %>
                      <%= f.password_field :password %>
                    </div>
                    <div class="button element">
                      <div class="button">
                        <%= f.submit "Login" %>
                      </div>
                    </div>
                    <% end %>

                    <div class="floatR">
                        <%= link_to 'Register', new_user_path %>
                    </div>
                    
                  </div>
                </div>
              </div>

          </div>
        </div>

      </div>
    </div>